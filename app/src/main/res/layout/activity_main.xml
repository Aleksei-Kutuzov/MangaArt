<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2A2A"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="340dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="368dp"
        android:layout_height="66dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoformain" />

    <ImageButton
        android:id="@+id/create"
        android:layout_width="182dp"
        android:layout_height="104dp"
        android:layout_marginTop="44dp"
        android:background="@null"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.991"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.052"
        app:srcCompat="@drawable/buttonred" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="69dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="@+id/create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="@+id/create"
        app:layout_constraintTop_toTopOf="@+id/create"
        app:layout_constraintVertical_bias="0.375"
        app:srcCompat="@drawable/create" />

    <ImageButton
        android:id="@+id/getToEditir"
        android:layout_width="128dp"
        android:layout_height="115dp"
        android:layout_marginEnd="280dp"
        android:background="@null"
        android:backgroundTint="@null"
        android:hapticFeedbackEnabled="false"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/buttonblue" />

    <ImageView
        android:id="@+id/pen"
        android:layout_width="91dp"
        android:layout_height="76dp"
        android:foregroundTint="#000000"
        android:foregroundTintMode="add"
        android:tint="#090505"
        app:layout_constraintBottom_toBottomOf="@+id/getToEditir"
        app:layout_constraintEnd_toEndOf="@+id/getToEditir"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="@id/getToEditir"
        app:layout_constraintTop_toTopOf="@+id/getToEditir"
        app:srcCompat="@drawable/pen" />

</androidx.constraintlayout.widget.ConstraintLayout>